{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": false,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowImportingTsExtensions": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tailwind"
    ]
}